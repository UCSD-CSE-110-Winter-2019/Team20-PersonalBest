<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GraphMessageActivity">

    <lecho.lib.hellocharts.view.ComboLineColumnChartView
        android:id="@+id/chart_month"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="56dp"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="32dp"/>

    <EditText
        android:id="@+id/chart_message"
        android:layout_width="225dp"
        android:layout_height="110dp"
        android:layout_below="@id/chart_month"
        android:layout_centerInParent="true"
        android:layout_marginTop="17dp"
        android:hint="Enter encouragement here!" />

    <Button
        android:id="@+id/chart_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="32dp"
        android:text="Send" />

</RelativeLayout>